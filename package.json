{
  "name": "yandex-realtime-server",
  "version": "1.0.0",
  "description": "TypeScript Express server for Yandex Cloud Realtime API",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd src/client && npm install && npm run build",
    "start": "node dist/server/index.js",
    "dev": "tsx watch src/server/index.ts",
    "dev:client": "cd src/client && npm run dev",
    "test": "jest",
    "lint": "eslint **/*.ts",
    "format": "prettier --write **/*.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "typescript",
    "express",
    "websocket",
    "yandex-cloud",
    "realtime-api",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT"
}
